<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aer"
    tools:context="com.example.dell.zxing.Generator_PersonalDetails">
    <TextView
        android:text="@string/enter_personal_details"
        android:textColor="#ffff"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:id="@+id/enterpersondetails"
        android:textSize="27sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

    <EditText
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_company"
        android:drawablePadding="20dp"
        android:hint="@string/company"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_person_email"
        android:drawablePadding="20dp"
        android:hint="@string/email"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/contact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_person_contact"
        android:drawablePadding="20dp"
        android:hint="@string/phone_number"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/yourname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/yourname"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_person_icon"
        android:drawablePadding="20dp"
        android:hint="@string/your_name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_home"
        android:drawablePadding="20dp"
        android:hint="@string/city"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/company"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/website"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#ffff"
        android:drawableLeft="@drawable/ic_action_weblink"
        android:drawablePadding="20dp"
        android:hint="@string/website"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:layout_below="@+id/city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:background="#79a209df"
        android:layout_height="70dp"
        android:textSize="22sp"
        android:text="@string/generate_qrcode"
        android:onClick="genpersonaldetails"
        android:textColor="#cccccc"
        android:id="@+id/qrpersondetails"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
